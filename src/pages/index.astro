---
import IndexLayout from "../components/layouts/IndexLayout.astro";
import SEOLayout from "../components/layouts/SEOLayout.astro";
import Scene from "../components/modules/Scene.jsx";

import { client } from "../assets/scripts/utils/api/sanityClient";
import { allIndexPosts } from "../assets/scripts/utils/api/api";

const allIndexPostsData = await client.fetch(allIndexPosts);
console.log(allIndexPostsData);
---

<SEOLayout
  title="Portfolio Donaël Walter | Creative Development, Photography, Design"
  description="Portfolio of Donaël WALTER, French Creative Developper, Interactive Designer, Hobbyist Photographer"
  lang="en"
>
  <IndexLayout>
    <div class="canvas">
      <Scene client:load />
    </div>
    <h1>
      <span class="line-1" id="creative">Creative</span>
      <span class="line-2" id="developper">Developper</span>
      <span class="line-3" id="and">& Enthusiast Designer</span>
    </h1>
    <footer>
      <ul>
        <li>
          <a href="https://www.instagram.com/walt_dona/" target="_blank"
            >Instagram</a
          >
        </li>
        <span>⁕</span>
        <li>
          <a href="https://github.com/Donawalt/" target="_blank">Github</a>
        </li>
        <span>⁕</span>
        <li>
          <a href="https://dribbble.com/donaelwalter" target="_blank">Dribble</a
          >
        </li>
      </ul>
      <a href="mailto:contact@donaelwalter.com" target="_blank" class="contact"
        >contact@donaelwalter.com</a
      >
    </footer>
  </IndexLayout>
</SEOLayout>

<style lang="scss" is:global>
  main {
    min-height: calc(100vh - 57px);
    height: fit-content;
    padding: 1px;
    position: relative;
    overflow: hidden;
    h1 {
      margin-top: 12vh !important;
      color: white;
      text-align: center;
      text-transform: uppercase;
      font-feature-settings: "ordn" on, "swsh" on, "ornm" on;
      span {
        display: block;
        overflow: hidden;
      }
      .line-1 {
        font-size: 80px;
        opacity: 0;
      }
      .line-2 {
        font-size: 110px;
        opacity: 0;
      }
      .line-3 {
        font-size: 35px;
        color: rgba(255, 255, 255, 0.7);
        text-transform: initial;
        font-feature-settings: "ordn" on;
        opacity: 0;
      }
      @media screen and (max-width: 425px) {
        .line-1 {
          font-size: 20px;
        }
        .line-2 {
          font-size: 30px;
        }
        .line-3 {
          font-size: 12px;
        }
      }
    }
    .canvas {
      position: absolute;
      top: 0px;
      height: 100%;
    }
    footer {
      position: absolute;
      bottom: 32px;
      color: white;
      display: grid;
      grid-template-columns: 1fr 1fr;
      width: 100%;
      a {
        text-decoration: none;
      }
      ul {
        display: flex;
        list-style: none;
        padding: 0px;
        margin: 0px;
        margin-left: 32px;
        span {
          margin-left: 8px;
          margin-right: 8px;
        }
        li {
          text-decoration: none;
        }
      }
      .contact {
        text-align: right;
        margin-right: 32px;
      }
      @media screen and (max-width: 425px) {
        grid-template-rows: auto auto;
        grid-template-columns: initial;
        .contact,
        ul {
          justify-content: center;
          align-items: center;
          text-align: center;
          margin: 0;
        }
      }
    }
  }
  #webGlWrapper {
    position: relative;
    top: 0;
    left: 0;
    height: calc(100vh - 57px) !important;
    width: 100vw !important;
  }
</style>
